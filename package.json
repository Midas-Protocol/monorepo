{
  "name": "monorepo",
  "packageManager": "yarn@3.2.0",
  "private": true,
  "workspaces": [
    "packages/bots/fuse-liquidator-bot",
    "packages/bots/fuse-twap-bot",
    "packages/bots/apy-tracking",
    "packages/functions",
    "packages/monitors/oracle",
    "packages/chains",
    "packages/sdk",
    "packages/types",
    "packages/ui"
  ],
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@tsconfig/recommended": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "netlify-cli": "^11.7.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@resolver-engine/core": "^0.3.3",
    "ts-node": "^10.9.1"
  },
  "resolutions": {
    "@types/react": "^17.0.15"
  },
  "scripts": {
    "build:sdk": "yarn build:types && yarn build:chains && yarn workspace @midas-capital/sdk build",
    "build:types": "yarn workspace @midas-capital/types build",
    "build:chains": "yarn build:types && yarn workspace @midas-capital/chains build",
    "build:twap": "yarn workspace @midas-capital/fuse-twap-bot build",
    "build:ui": "yarn workspace @midas-capital/ui build",
    "build:functions": "yarn workspace @midas-capital/functions build",
    "build:liquidator": "yarn workspace @midas-capital/fuse-liquidator-bot build",
    "build:oracles-monitor": "yarn workspace @midas-capital/oracles-monitor build",
    "build:deploy:liquidator": "yarn build:sdk && yarn build:liquidator",
    "build:deploy:twap": "yarn build:sdk && yarn build:twap",
    "build:deploy:oracles-monitor": "yarn build:sdk && yarn build:oracles-monitor",
    "build:deploy:ui": "yarn build:sdk && yarn build:ui && yarn build:functions",
    "dev:ui": "yarn workspace @midas-capital/sdk export:ganache; yarn build:sdk && yarn workspace @midas-capital/ui dev",
    "dev:functions": "yarn build:sdk && yarn build:ui && netlify dev",
    "dev:node": "yarn workspace @midas-capital/sdk hardhat node --no-deploy",
    "dev:node:deploy": "yarn workspace @midas-capital/sdk deploy:localhost",
    "dev:node:fork": "yarn workspace @midas-capital/sdk hardhat node --no-deploy",
    "dev:simulate:deploy:bsc": "FORK_URL_BSC=${MY_BSC_FORK_URL} FORK_BLOCK_NUMBER= FORK_CHAIN_ID=56 yarn workspace @midas-capital/sdk hardhat node --tags prod",
    "test:ui": "yarn workspace @midas-capital/ui test"
  }
}
