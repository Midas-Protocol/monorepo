{
  "name": "@midas-capital/sdk",
  "repository": "git://github.com:midas-protocol/monorepo.git",
  "version": "0.2.16",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "description": "",
  "main": "./dist/cjs/src/index.js",
  "module": "./dist/esm/src/index.js",
  "types": "./dist/cjs/src/index.d.ts",
  "files": [
    "/dist/",
    "/artifacts",
    "deployments.json"
  ],
  "scripts": {
    "build": "npm run build:forge && npm run typechain && npm run build:sdk",
    "build:forge": "cd lib/contracts && forge install && forge build && forge build --contracts contracts/compound/CErc20PluginRewardsDelegate.sol --optimizer-runs 8 && forge build --contracts contracts/compound/CErc20PluginDelegate.sol --optimizer-runs 2",
    "build:sdk": "tsc -p tsconfig-sdk.json && tsc -p tsconfig-cjs.json",
    "build:esm": "tsc -p tsconfig-sdk.json",
    "build:cjs": "tsc -p tsconfig-cjs.json",
    "compile": "hardhat compile",
    "setup": "cd lib/contracts && forge build",
    "test:mocha": "nyc ts-mocha --require 'tests-mocha/globalTestHook.ts' --check-leaks --exit --timeout 60000 'tests-mocha/**/*.spec.ts'",
    "test": "hardhat test --parallel",
    "test:bsc": "FORK_URL=${FORK_URL_BSC} FORK_BLOCK_NUMBER=${FORK_BLOCK_NUMBER} FORK_CHAIN_ID=56 hardhat test",
    "test:forge": "cd lib/contracts && forge test",
    "test:forge:moonbeam": "cd lib/contracts && forge test --fork-url https://rpc.api.moonbeam.network --fork-block-number 1058520",
    "test:forge:evmostestnet": "cd lib/contracts && forge test --fork-url https://eth.bd.evmos.dev:8545 --fork-block-number 1217475",
    "export": "hardhat export --export-all ./deployments.json",
    "export:all": "npm run export:bsc && npm run export:polygon && npm run export:moonbeam && npm run export:neondevnet && npm run export:chapel",
    "export:bsc": "hardhat export --network bsc --export ../chains/deployments/bsc.json",
    "export:polygon": "hardhat export --network polygon --export ../chains/deployments/polygon.json",
    "export:moonbeam": "hardhat export --network moonbeam --export ../chains/deployments/moonbeam.json",
    "export:neondevnet": "hardhat export --network neondevnet --export ../chains/deployments/neondevnet.json",
    "export:chapel": "hardhat export --network chapel --export ../chains/deployments/chapel.json",
    "export:evmos": "hardhat export --network evmostestnet --export ../chains/deployments/evmos.json",
    "export:ganache": "hardhat export --network localhost --export ../chains/deployments/ganache.json",
    "clean": "rm -rf dist",
    "prettier:ts": "prettier --write 'chainDeploy/**/*.ts' 'src/**/*.ts' 'deploy/**/*.ts' 'tasks/**/*.ts' 'tests/**/*.ts'",
    "lint": "eslint . -c .eslintrc.json --ext ts,json",
    "lint-fix": "eslint . -c .eslintrc.json --fix --ext ts,json",
    "typechain": "typechain --target ethers-v5 --out-dir './lib/contracts/typechain' './lib/contracts/out/*/**.json'",
    "deploy:simulate:bsc:testnet": "FORK_URL_BSC=https://speedy-nodes-nyc.moralis.io/2d2926c3e761369208fba31f/bsc/testnet/archive FORK_BLOCK_NUMBER= FORK_CHAIN_ID=97 hardhat node --tags simulate",
    "deploy:simulate:bsc:mainnet": "FORK_URL_BSC=https://speedy-nodes-nyc.moralis.io/2d2926c3e761369208fba31f/bsc/mainnet/archive FORK_BLOCK_NUMBER= FORK_CHAIN_ID=56 hardhat node --tags simulate",
    "deploy:bsc:testnet": "hardhat --network chapel deploy --tags prod",
    "deploy:bsc:mainnet": "hardhat --network bsc deploy --tags prod",
    "deploy:evmos:testnet": "hardhat --network evmostestnet deploy --tags prod",
    "deploy:moonbeam:mainnet": "hardhat --network moonbeam deploy --tags prod",
    "forge": "forge",
    "hardhat": "hardhat"
  },
  "keywords": [],
  "author": "Midas Capital",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@tenderly/hardhat-tenderly": "^1.0.13",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/bad-words": "^3.0.1",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7",
    "@types/chai-subset": "^1",
    "@types/eslint": "^8.4.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@types/sinon-chai": "^3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "hardhat": "^2.9.9",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-deploy": "^0.11.5",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "lint-staged": "12.4.1",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.8.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@keydonix/uniswap-oracle-sdk": "^1.0.7",
    "@keydonix/uniswap-oracle-sdk-adapter": "^1.0.7",
    "@midas-capital/chains": "workspace:*",
    "@midas-capital/types": "workspace:*",
    "bad-words": "^3.0.4",
    "bufferutil": "^4.0.6",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.9",
    "utf-8-validate": "^5.0.9"
  }
}
